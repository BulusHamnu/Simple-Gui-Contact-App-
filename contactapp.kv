<ContactScreen>
    size : root.width,root.height
    BoxLayout:
        id : yea
        orientation: 'vertical'
        size : root.width, root.height
        ActionBar:
            size_hint_y: None
            ActionView:
                ActionPrevious:
                    title: 'Contact list'
                    with_previous: False
                ActionButton:
                    text: 'Refresh'
                    on_press : root.reload()
        ScrollView :
            do_scroll_y : True
            BoxLayout :
                orientation : 'vertical'
                id: Contactscroll
                size_hint_y: 0.7
                
                
                
        GridLayout:
            rows : 1
            spacing : 1
            size_hint: 1,0.1
                    
            Button :
                text : "ADD"
                id : add_botton
                size_hint : 0.1,0.1
                size : 100,5
                on_press : root.show_add_popup()
        
            Button :
                text : "REMOVE"
                size_hint : 0.1,0.1
                size : 100,5
                on_press : root.show_remove_popup()

<Addcontact>
    size_hint: 1, 1
    orientation : "vertical"
    GridLayout:
        cols: 2
        size_hint : 1,1
        Label :
            text : "Name"
            font_size : 40
            size_hint :0.3,0.3
        TextInput:
            id: addname
            multiline : False
            size_hint : 0.5,1
        Label :
            text : "Number"
            font_size : 40
            size_hint : 0.3,0.3
        TextInput:
            id: addnumber
            multiline : False
            size_hint : 0.5,1          
        
    BoxLayout:
        orientation: 'vertical'
        size_hint : 1, 0.5
        Button :
            text : "Save"
            id: save
            size_hint : 1,1
            on_press : root.save_contact()
            

<Removecontact>
    size_hint : 1,1
    orientation : 'vertical'
    GridLayout:
        size_hint: 1,1
        cols:2
        Label :
            text : "Name"
            font_size : 40
            size_hint :0.3,0.3
        TextInput:
            id: removename
            multiline : False
            size_hint : 0.5,1
        Label :
            text : "Number"
            font_size : 40
            size_hint : 0.3,0.3
        TextInput:
            id: removenumber
            multiline : False
            size_hint : 0.5,1
    BoxLayout:
        orientation: 'vertical'
        size_hint : 1, 0.5
        Button :
            text : "Delete"
            id: save
            size_hint : 1,1
            on_press : root.delete_contact()   





